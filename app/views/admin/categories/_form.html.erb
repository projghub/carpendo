<%= form_for @admin_category, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render "layouts/error_messages", :target => @admin_category %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :parent_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :parent_id, nested_set_options(Admin::Category, @admin_category) {|i| "#{'-' * i.level} #{i.name}" }.unshift(["No Parent", nil]) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_categories_path, :class => 'btn' %>
  </div>
<% end %>
